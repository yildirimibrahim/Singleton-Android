<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.singleton.MainActivity">


    <!-- random start -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onClickRandomButton"
            android:id="@+id/btnRandom"
            android:text=" Random Number "
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvRandomValue"
            android:layout_margin="5dp"
            android:gravity="left|center"
            android:layout_gravity="left|center"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!-- random end -->

    <!-- SingletonString start -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onClickSingletonButton"
            android:id="@+id/btnSingleton"
            android:text=" Singleton Strin Text "
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSingletonValue"
            android:layout_margin="5dp"
            android:gravity="left|center"
            android:layout_gravity="left|center"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!-- SingletonString end -->

    <!-- SharedPreferences start -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onClickSharePreferencesButton"
            android:id="@+id/btnSharedPreferences"
            android:text="Singleton Shared Preferences "
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvSharedPreferencesValue"
            android:layout_margin="5dp"
            android:gravity="left|center"
            android:layout_gravity="left|center"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!-- SharedPreferences end -->


    <!-- Array List start -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="onClickArrayListButton"
            android:id="@+id/btnArrayList"
            android:text="Singleton Array List User"
            android:layout_width="150dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvArrayListValue"
            android:layout_margin="5dp"
            android:gravity="left|center"
            android:layout_gravity="left|center"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!-- Array List end -->

</LinearLayout>

